    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.kogin{width: 100%;
height: 200rpx;
background-color:#585858;}
.a{display: flex;
    width: 80%;
    justify-content: center;
    align-items: center;
font-size: 20rpx;
margin-top: 20rpx;
border: 5rpx solid lightpink;
