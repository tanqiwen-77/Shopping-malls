.container{padding-bottom: 100rpx;}
.swiper{width: 100%;}
.swiper image{width: 100%;}
.a{display: flex;height: 80rpx;
margin-bottom: 50rpx;}
.name{
    flex: 8;
    display: -webkit-box;
    -webkit-box-orient: vertical;
line-clamp: 2;
overflow: hidden;
border-left:5rpx solid lightsteelblue;
}
.collect{flex: 2;text-align: center;}
.collect image{width: 50rpx;height: 50rpx;}
.img{width: 100%;}
.bot{display: flex;
position: fixed;
bottom: 0;
left: 0;
width: 100%;
height: 100rpx;
border-top: 5rpx solid lightgray;
border-bottom: 5rpx solid lightgray;}
.kefu{width: 100rpx;
text-align: center;
background-color: ivory;}
.share{width: 100rpx;
    text-align: center;
    background-color: ivory;}
.cate{width: 100rpx;
        text-align: center;
        background-color: ivory;}
.kefu image,.share image,.cate image{
    width: 30rpx;height: 30rpx;
}
.join,.pay{width: 225rpx;
display: flex;
justify-content: center;
align-items: center;}
.join{background-color: orange;
}
.pay{background-color: orangered;}
