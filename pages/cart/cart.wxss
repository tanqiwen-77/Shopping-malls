.dizhi{width: 100%;
height: 120rpx;
padding-top: 50rpx;
margin-bottom: 50rpx;

}
.title{height: 70rpx;
border-bottom:5rpx solid lightslategray;
border-top:5rpx solid lightslategray;}
.item{display: flex;height: 200rpx;
position: relative;
border-bottom: 10rpx solid lavenderblush;}
.item image{width: 250rpx;height: 200rpx;margin-right: 20rpx;}
.check{width: 150rpx;
display: flex;
justify-content: center;
align-items: center;}
.oper{display: flex;position: absolute;
bottom: 10rpx; right: 10rpx;
justify-content: center;
align-items: center;}
.num{margin: 10rpx;
border: 5rpx solid lightgray;
width: 40rpx;height: 40rpx;
text-align: center;}
.price{margin-top: 20rpx;color: lightcoral;}
.bot{display: flex;
align-items: center;height: 100rpx;
position: fixed;
bottom: 0;
width: 100%;
border-top: 5rpx solid lightgoldenrodyellow;}
.bot checkbox{margin-left: 20rpx;margin-right: 200rpx;

}
.pay{background-color: lightcoral;height: 100%;width: 300rpx;
display: flex;
justify-content: center;
align-items: center;}
.text{width: 250rpx;}